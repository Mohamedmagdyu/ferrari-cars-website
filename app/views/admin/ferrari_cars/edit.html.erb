<% content_for :title, "Edit Ferrari car" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_ferrari_car_path(@ferrari_car.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Ferrari car
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Edit Ferrari car</h1>
  </div>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @ferrari_car], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @ferrari_car %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@ferrari_car, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :name) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Model -->
        <div class="mb-4">
          <%= form.label :model, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Model<% if field_required?(@ferrari_car, :model) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :model, {
            placeholder: "Enter model...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :model) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:model].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:model].first %></p>
          <% end %>
        </div>

        <!-- Year -->
        <div class="mb-4">
          <%= form.label :year, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Year<% if field_required?(@ferrari_car, :year) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :year, {
            placeholder: "Enter year...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :year) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:year].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:year].first %></p>
          <% end %>
        </div>

        <!-- Price -->
        <div class="mb-4">
          <%= form.label :price, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Price<% if field_required?(@ferrari_car, :price) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :price, {
            placeholder: "Enter price...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :price) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:price].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:price].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@ferrari_car, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :description) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Engine -->
        <div class="mb-4">
          <%= form.label :engine, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Engine<% if field_required?(@ferrari_car, :engine) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :engine, {
            placeholder: "Enter engine...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :engine) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:engine].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:engine].first %></p>
          <% end %>
        </div>

        <!-- Top speed -->
        <div class="mb-4">
          <%= form.label :top_speed, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Top speed<% if field_required?(@ferrari_car, :top_speed) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :top_speed, {
            placeholder: "Enter top speed...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :top_speed) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:top_speed].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:top_speed].first %></p>
          <% end %>
        </div>

        <!-- Acceleration -->
        <div class="mb-4">
          <%= form.label :acceleration, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Acceleration<% if field_required?(@ferrari_car, :acceleration) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.number_field :acceleration, {
            placeholder: "Enter acceleration...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :acceleration) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:acceleration].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:acceleration].first %></p>
          <% end %>
        </div>

        <!-- Status -->
        <div class="mb-4">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Status<% if field_required?(@ferrari_car, :status) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :status, {
            placeholder: "Enter status...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :status) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:status].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:status].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@ferrari_car, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50"
          }.merge(field_required?(@ferrari_car, :slug) ? { required: true } : {}) %>
          <% if @ferrari_car.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <%= form.label :category_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Category<% if field_required?(@ferrari_car, :category) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.select :category_id, 
              options_for_select([['Select Category', '']] + Category.all.map { |item| [item.name, item.id] }, @ferrari_car.category_id),
              {},
              { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50" } %>
          <% if @ferrari_car.errors[:category_id].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:category_id].first %></p>
          <% end %>
        </div>

        <!-- Image -->
        <div class="mb-4">
          <%= form.label :image, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Image
          <% end %>
          
          <!-- Current attachments -->
          <% if @ferrari_car.image.attached? %>
            <div class="mb-3 p-3 border border-gray-200 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-800">
              <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Current file:</p>
              <div class="text-sm text-gray-600 dark:text-gray-400 flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                </svg>
                <%= @ferrari_car.image.filename %>
              </div>
            </div>
          <% end %>
          
          <%= form.file_field :image, {
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-gray-50 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
          } %>
          <p class="text-sm text-gray-500 mt-1">Select a new file to replace the current one, or leave empty to keep current file</p>
          <% if @ferrari_car.errors[:image].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @ferrari_car.errors[:image].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_ferrari_car_path(@ferrari_car.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Ferrari car", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>